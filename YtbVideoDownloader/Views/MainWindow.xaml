<Window x:Class="YtbVideoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YtbVideoDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBox x:Name="urlTxtBox" FontSize="20" FontWeight="UltraBlack" BorderBrush="Red" BorderThickness="5" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="654" Canvas.Left="73" Canvas.Top="10"></TextBox>
        <Button Canvas.Left="650" Canvas.Top="110" HorizontalAlignment="Center" Height="63" VerticalAlignment="Top" Width="77" Command="{Binding DownloadCommand}" >
            <Image Source="https://icons-for-free.com/download-icon-down+download+downloads+icon-1320196066868908267_512.png" Height="40" Width="40"></Image>
        </Button>
        <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Width="516" Height="32" Canvas.Left="98" Canvas.Top="248" HorizontalAlignment="Left" VerticalAlignment="Top" ></ProgressBar>

    </Canvas>
</Window>
